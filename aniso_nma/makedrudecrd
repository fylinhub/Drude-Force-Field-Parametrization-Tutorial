do
    for j in {-165..180..15}
        do
            sed -i "s/CR/CC/g" nma.pot.2.6_"$i"_"$j".crd
            sed -i "s/HR/HC/g" nma.pot.2.6_"$i"_"$j".crd
            #sed -i "s/TIP3/SWM4/g" nma.pot.2.6_"$i"_"$j".crd
        done
done

