sed -i "s/CR/CC/g" nma.pot.2.6_180_180.crd
sed -i "s/HR/HC/g" nma.pot.2.6_180_180.crd
#sed -i "s/TIP3/SWM4/g" nma.pot.2.6_180_180.crd

